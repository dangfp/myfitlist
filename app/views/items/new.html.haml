= bootstrap_form_for([@planning, @item], layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-2") do |f|
  = f.text_field :name, label: "项目名称："
  = f.text_field :duration, label: "训练时长（分钟）："
  = f.text_field :result, label: "训练结果："
  = f.text_field :unit, label: "单位："
  = f.submit "新增", class: "control-group col-sm-offset-2 btn btn-success"